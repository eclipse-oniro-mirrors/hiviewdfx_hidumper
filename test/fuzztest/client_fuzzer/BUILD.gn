#####################hydra-fuzz###################
import("//build/config/features.gni")
import("//build/test.gni")
import("../../../hidumper.gni")

##############################fuzztest##########################################
ohos_fuzztest("ClientFuzzTest") {
  module_out_path = hidumper_fuzz_output_path
  fuzz_config_file = "../../../test/fuzztest/client_fuzzer"

  configs = [
    "${hidumper_frameworks_path}:hidumper_include",
    "${hidumper_service_path}:interface_include",
  ]
  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]
  sources = [ "./client_fuzzer.cpp" ]
  external_deps = [
    "c_utils:utils",
    "drivers_interface_memorytracker:libmemorytracker_proxy_1.0",
    "hdf_core:libhdf_utils",
    "hilog:libhilog",
    "ipc:ipc_core",
    "samgr:samgr_proxy",
  ]

  deps = [ "${hidumper_service_path}:hidumper_client" ]
}

###############################################################################
group("fuzztest") {
  testonly = true
  deps = []
  deps += [
    # deps file
    ":ClientFuzzTest",
  ]
}
